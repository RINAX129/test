<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/strus-2.3.dtd">

<struts>
	<constant name="struts.devMode" value="true"/>
	<package name="com.internousdev.ecsite.action" extends="struts-default">

		<action name="GoHomeAction" class="com.internousdev.ecsite.GoHomeAction" method="execute">
			<result name="success">home.jsp</result>
		</action>

		<action name="HomeAction" class="com.internousdev.ecsite.action.HomeAction" method="execute">
			<result name="login">login.jsp</result>
			<result name="success">buyItem.jsp</result>
		</action>

		<action name="LoginAction" class="com.internousdev.ecsite.action.LoginAction" method="execute">
			<result name="success">buyItem.jsp</result>
			<result name="error">login.jsp</result>
		</action>

		<action name="UserCresteAction" class="com.internousdev.ecsite.action.UserCreateAction" method="execute">
			<result name="success">userCreste.jsp</result>
			<result name="back">login.jsp</result>
		</action>

		<action name="UserCresteConfirmAction" class="com.internousdev.ecsite.action.UserCresteConfirmAction" method="execute">
			<result name="success">userCresteConfirm.jsp</result>
			<result name="error">userCreste.jsp</result>
		</action>

		<action name="UserCresteCompleteAction" class="com.internousdev.ecsite.action.UserCreateCompleteAction" method="execute">
			<result name="success">userCresteComplete.jsp</result>
		</action>

		<action name="BuyItemAction" class="com.internousdev.ecsite.action.BuyItemAction" method="execute">
			<result name="success">buyItemComplete.jsp</result>
			<result name="error">buyItem.jsp</result>
		</action>

		<action name="BuyItemConfirmAction" class="com.internousdev.ecsite.action.BuyItemConfirmAction" method="execute">
			<result name="success">buyItemComplete.jsp</result>
			<result name="back">buyItem.jsp</result>
		</action>

		<action name="MyPageAction" class="com.internousdev.ecsite.action.MyPageAction" method="execute">
			<result name="success">myPage.jsp</result>
			<result name="error">home.jsp</result>
		</action>

		<action name="LogoutAction" class="com.internousdev.ecsite.action.LogoutAction" method="execute">
			<result name="success">home.jsp</result>
		</action>

	</package>
</struts>